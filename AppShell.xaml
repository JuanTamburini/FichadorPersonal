<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FichadorPersonal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FichadorPersonal"
    xmlns:view="clr-namespace:FichadorPersonal.View">

    <TabBar>
        <Tab Title="Home"
             Icon="home_outline_icon.png">
            <ShellContent ContentTemplate="{DataTemplate view:MainPage}" Route="MainPage"/>
        </Tab>
        <Tab Title="Actividad"
             Icon="home_outline_icon.png">
            <ShellContent ContentTemplate="{DataTemplate view:MainPage}" Route="ActivityPage"/>
        </Tab>
    </TabBar>

</Shell>
