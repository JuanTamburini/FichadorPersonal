<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FichadorPersonal.View.RegisterFormPage"
             Title="RegisterFormPage">

    <Grid RowDefinitions="*, 200"
          ColumnDefinitions="*,*">
        
        <VerticalStackLayout Grid.ColumnSpan="2"
                             VerticalOptions="CenterAndExpand"
                             Padding="20">
            
            <Label VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   Margin="20"
                   Text="No tenés turnos en curso"
                   FontFamily="OpenSansSemibold"
                   FontSize="38"/>
            <Label HorizontalTextAlignment="Center"
                   FontSize="18"
                   Text="¡Inicia un nuevo turno que comienza ahora o, si te olvidaste, carga un turno que ya hayas realizado!"/>

        </VerticalStackLayout>


        <Button Grid.Row="1"
                Text="Nuevo turno"
                Margin="20, 20, 10, 50" />
        
        <Button Grid.Row="1"
                Grid.Column="1"
                Text="Cargar turno"
                Margin="10, 20, 20, 50"
                />
    </Grid>
</ContentPage>